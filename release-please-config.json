{
  "$schema": "https://raw.googleapis.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "packages": {
    ".": {
      "package-name": "foundry-mcp-server",
      "changelog-sections": [
        {"type": "feat", "section": "Features"},
        {"type": "fix", "section": "Bug Fixes"},
        {"type": "chore", "section": "Miscellaneous", "hidden": false}
      ]
    },
    "foundry-local-rest-api": {
      "package-name": "foundry-local-rest-api-module", 
      "release-type": "simple",
      "changelog-sections": [
        {"type": "feat", "section": "Features"},
        {"type": "fix", "section": "Bug Fixes"},
        {"type": "chore", "section": "Miscellaneous", "hidden": false}
      ],
      "extra-files": [
        {
          "type": "json",
          "path": "foundry-local-rest-api/module.json",
          "jsonpath": "$.version"
        }
      ]
    }
  }
}
